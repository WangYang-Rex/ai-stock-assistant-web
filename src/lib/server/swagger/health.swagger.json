{
  "swagger": "2.0",
  "info": {
    "title": "Health API",
    "version": "1.0.0",
    "description": "API for system and database health checks"
  },
  "paths": {
    "/api/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "健康检查",
        "description": "检查服务器及数据库连接状态",
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "ok"
                },
                "database": {
                  "type": "string",
                  "example": "connected"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    }
  }
}
