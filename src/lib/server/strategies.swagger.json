{
  "swagger": "2.0",
  "info": {
    "title": "Strategies API",
    "version": "1.0.0",
    "description": "API for stock market strategies management and evaluation"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/strategies/detail": {
      "post": {
        "tags": [
          "Strategies"
        ],
        "summary": "获取策略聚合详情",
        "description": "一次性获取策略基本信息、配置参数、性能指标、K线行情、交易信号及净值曲线",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "策略ID"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回策略聚合详情",
            "schema": {
              "$ref": "#/definitions/StrategyDetailDto"
            }
          }
        }
      }
    },
    "/api/strategies/signals/query": {
      "post": {
        "tags": ["Strategies"],
        "summary": "分页查询策略信号",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/QuerySignalDto" }
          }
        ],
        "responses": {
          "200": {
            "description": "信号列表",
            "schema": { "$ref": "#/definitions/SignalListResponseDto" }
          }
        }
      }
    },
    "/api/strategies/signals/latest": {
      "post": {
        "tags": ["Strategies"],
        "summary": "获取最新策略信号",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/LatestSignalDto" }
          }
        ],
        "responses": {
          "200": {
            "description": "信号列表",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/StrategySignal" }
            }
          }
        }
      }
    },
    "/api/strategies/signals/detail": {
      "post": {
        "tags": ["Strategies"],
        "summary": "获取信号详情",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "信号ID"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "信号详情",
            "schema": { "$ref": "#/definitions/StrategySignal" }
          }
        }
      }
    },
    "/api/strategies/close-auction/evaluate-by-symbol": {
      "post": {
        "tags": [
          "Strategies"
        ],
        "summary": "根据股票代码自动评估尾盘策略",
        "description": "输入股票代码，系统自动获取分时数据并进行评估",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "symbol"
              ],
              "properties": {
                "symbol": {
                  "type": "string",
                  "description": "股票代码 (如 588080)",
                  "example": "588080"
                },
                "market": {
                  "type": "integer",
                  "description": "市场代码 (1-上海, 0-深圳)",
                  "default": 1,
                  "example": 1
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "评估结果",
            "schema": {
              "$ref": "#/definitions/StrategySignalDto"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "StrategyDetailDto": {
      "type": "object",
      "properties": {
        "strategy": {
          "$ref": "#/definitions/StrategyInfoDto"
        },
        "metrics": {
          "$ref": "#/definitions/StrategyMetricsDto"
        },
        "priceSeries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PricePointDto"
          }
        },
        "trades": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TradePointDto"
          }
        },
        "equityCurve": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EquityCurvePointDto"
          }
        }
      }
    },
    "StrategyInfoDto": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "symbol": { "type": "string" },
        "status": { "type": "string" },
        "params": { "type": "object" }
      }
    },
    "StrategyMetricsDto": {
      "type": "object",
      "properties": {
        "totalReturn": { "type": "number" },
        "annualReturn": { "type": "number" },
        "maxDrawdown": { "type": "number" },
        "winRate": { "type": "number" },
        "tradeCount": { "type": "integer" }
      }
    },
    "PricePointDto": {
      "type": "object",
      "properties": {
        "date": { "type": "string" },
        "close": { "type": "number" }
      }
    },
    "TradePointDto": {
      "type": "object",
      "properties": {
        "date": { "type": "string" },
        "price": { "type": "number" },
        "side": { "type": "string", "enum": ["BUY", "SELL"] },
        "allow": { "type": "boolean" }
      }
    },
    "EquityCurvePointDto": {
      "type": "object",
      "properties": {
        "date": { "type": "string" },
        "equity": { "type": "number" }
      }
    },
    "MinuteBar": {
      "type": "object",
      "required": ["time", "open", "high", "low", "close", "volume"],
      "properties": {
        "time": { "type": "string", "example": "14:45" },
        "open": { "type": "number" },
        "high": { "type": "number" },
        "low": { "type": "number" },
        "close": { "type": "number" },
        "volume": { "type": "number" }
      }
    },
    "EvaluateCloseAuctionDto": {
      "type": "object",
      "required": ["symbol", "tradeDate", "minuteBars"],
      "properties": {
        "symbol": { "type": "string", "example": "588080" },
        "tradeDate": { "type": "string", "example": "2026-01-28" },
        "minuteBars": {
          "type": "array",
          "items": { "$ref": "#/definitions/MinuteBar" }
        },
        "componentStrength": { "type": "number", "default": 70 }
      }
    },
    "StrategySignalDto": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string" },
        "symbol": { "type": "string" },
        "allow": { "type": "boolean" },
        "confidence": { "type": "integer" },
        "reasons": { "type": "array", "items": { "type": "string" } },
        "evaluatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "QuerySignalDto": {
      "type": "object",
      "properties": {
        "strategyCode": { "type": "string" },
        "symbol": { "type": "string" },
        "startDate": { "type": "string" },
        "endDate": { "type": "string" },
        "allowOnly": { "type": "boolean" },
        "minConfidence": { "type": "number" },
        "page": { "type": "integer" },
        "pageSize": { "type": "integer" }
      }
    },
    "SignalListResponseDto": {
      "type": "object",
      "properties": {
        "list": { "type": "array", "items": { "$ref": "#/definitions/StrategySignal" } },
        "total": { "type": "integer" },
        "page": { "type": "integer" },
        "pageSize": { "type": "integer" }
      }
    },
    "LatestSignalDto": {
      "type": "object",
      "properties": {
        "limit": { "type": "integer" },
        "strategyCode": { "type": "string" },
        "symbol": { "type": "string" },
        "allowOnly": { "type": "boolean" }
      }
    },
    "StrategySignal": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "strategyCode": { "type": "string" },
        "symbol": { "type": "string" },
        "tradeDate": { "type": "string" },
        "allow": { "type": "integer" },
        "confidence": { "type": "integer" },
        "reasons": { "type": "array", "items": { "type": "string" } },
        "evalTime": { "type": "string", "format": "date-time" },
        "price": { "type": "number" },
        "vwap": { "type": "number" },
        "volume": { "type": "integer" },
        "extra": { "type": "object" }
      }
    }
  }
}
