{
  "swagger": "2.0",
  "info": {
    "title": "Quotes API - 行情快照接口",
    "description": "提供股票实时行情快照的同步、查询、排行榜等功能",
    "version": "1.0.0"
  },
  "paths": {
    "/api/quotes/syncStockQuotesFromAPI": {
      "post": {
        "tags": ["行情管理"],
        "summary": "同步股票快照",
        "description": "从第三方 API 获取指定股票的最新实时行情并保存",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "同步参数",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["code", "market"],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "股票代码",
                  "example": "600519"
                },
                "market": {
                  "type": "integer",
                  "description": "市场代码",
                  "example": 1
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "同步成功",
            "schema": {
              "allOf": [
                {
                  "$ref": "#/definitions/ApiResponse"
                },
                {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "boolean",
                      "description": "是否同步成功",
                      "example": true
                    }
                  }
                }
              ]
            }
          },
          "500": {
            "description": "同步失败"
          }
        }
      }
    },
    "/api/quotes/syncAllStockQuotes": {
      "post": {
        "tags": ["行情管理"],
        "summary": "批量同步所有股票快照",
        "description": "异步启动全量股票行情同步任务",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "任务已启动",
            "schema": {
              "allOf": [
                {
                  "$ref": "#/definitions/ApiResponse"
                },
                {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "description": "提示消息",
                          "example": "批量同步任务已启动，请查看日志了解同步进度"
                        }
                      }
                    }
                  }
                }
              ]
            }
          },
          "500": {
            "description": "任务启动失败"
          }
        }
      }
    },
    "/api/quotes/list": {
      "post": {
        "tags": ["行情查询"],
        "summary": "获取所有行情快照",
        "description": "分页查询行情快照列表",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "查询参数",
            "schema": {
              "$ref": "#/definitions/QuoteQueryDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "$ref": "#/definitions/QuotePaginatedResponse"
            }
          },
          "500": {
            "description": "查询失败"
          }
        }
      }
    },
    "/api/quotes/latest": {
      "post": {
        "tags": ["行情查询"],
        "summary": "获取指定股票的最新行情",
        "description": "查询指定代码的最新一条行情快照",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "查询参数",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["code"],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "股票代码",
                  "example": "600519"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "$ref": "#/definitions/QuoteResponse"
            }
          },
          "404": {
            "description": "行情未找到"
          },
          "500": {
            "description": "查询失败"
          }
        }
      }
    },
    "/api/quotes/delete": {
      "post": {
        "tags": ["行情管理"],
        "summary": "删除行情快照",
        "description": "根据 ID 删除行情记录",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "删除参数",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "行情 ID",
                  "example": 1
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "500": {
            "description": "删除失败"
          }
        }
      }
    },
    "/api/quotes/rankings-gainers": {
      "post": {
        "tags": ["行情排行"],
        "summary": "获取涨幅排行榜",
        "description": "按照涨幅从高到低排序",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "排行参数",
            "schema": {
              "type": "object",
              "properties": {
                "limit": {
                  "type": "integer",
                  "description": "返回数量",
                  "default": 10,
                  "example": 10
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "$ref": "#/definitions/QuoteListResponse"
            }
          },
          "500": {
            "description": "获取失败"
          }
        }
      }
    },
    "/api/quotes/rankings-losers": {
      "post": {
        "tags": ["行情排行"],
        "summary": "获取跌幅排行榜",
        "description": "按照涨幅从低到高排序",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "排行参数",
            "schema": {
              "type": "object",
              "properties": {
                "limit": {
                  "type": "integer",
                  "description": "返回数量",
                  "default": 10,
                  "example": 10
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "$ref": "#/definitions/QuoteListResponse"
            }
          },
          "500": {
            "description": "获取失败"
          }
        }
      }
    },
    "/api/quotes/rankings-volume": {
      "post": {
        "tags": ["行情排行"],
        "summary": "获取成交量排行榜",
        "description": "按照成交量从高到低排序",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "排行参数",
            "schema": {
              "type": "object",
              "properties": {
                "limit": {
                  "type": "integer",
                  "description": "返回数量",
                  "default": 10,
                  "example": 10
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "$ref": "#/definitions/QuoteListResponse"
            }
          },
          "500": {
            "description": "获取失败"
          }
        }
      }
    }
  },
  "definitions": {
    "Quote": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "主键ID",
          "example": 1
        },
        "code": {
          "type": "string",
          "description": "股票代码",
          "example": "600519"
        },
        "name": {
          "type": "string",
          "description": "股票名称",
          "example": "贵州茅台"
        },
        "price": {
          "type": "number",
          "description": "最新价",
          "example": 1800.5
        },
        "high": {
          "type": "number",
          "description": "今日最高价",
          "example": 1820.0
        },
        "low": {
          "type": "number",
          "description": "今日最低价",
          "example": 1790.0
        },
        "open": {
          "type": "number",
          "description": "今日开盘价",
          "example": 1800.0
        },
        "preClose": {
          "type": "number",
          "description": "昨日收盘价",
          "example": 1795.5
        },
        "volume": {
          "type": "integer",
          "description": "成交量(股)",
          "example": 1234567
        },
        "amount": {
          "type": "number",
          "description": "成交额(元)",
          "example": 2222839545.0
        },
        "pct": {
          "type": "number",
          "description": "涨跌幅(%)",
          "example": 1.25
        },
        "change": {
          "type": "number",
          "description": "涨跌额",
          "example": 22.5
        },
        "turnover": {
          "type": "number",
          "description": "换手率(%)",
          "example": 0.8
        },
        "totalMarketCap": {
          "type": "number",
          "description": "总市值(元)",
          "example": 2262500000000.0
        },
        "floatMarketCap": {
          "type": "number",
          "description": "流通市值(元)",
          "example": 2262500000000.0
        },
        "pe": {
          "type": "number",
          "description": "市盈率(动态)",
          "example": 32.5
        },
        "pb": {
          "type": "number",
          "description": "市净率",
          "example": 8.2
        },
        "updateTime": {
          "type": "integer",
          "description": "更新时间戳（秒）",
          "example": 1672531200
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "创建时间"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "更新时间"
        }
      }
    },
    "QuoteQueryDto": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "股票代码"
        },
        "startTime": {
          "type": "integer",
          "description": "开始时间戳（秒）"
        },
        "endTime": {
          "type": "integer",
          "description": "结束时间戳（秒）"
        },
        "page": {
          "type": "integer",
          "description": "页码",
          "default": 1
        },
        "limit": {
          "type": "integer",
          "description": "每页数量",
          "default": 10
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "响应消息",
          "example": "操作成功"
        },
        "result": {
          "type": "integer",
          "description": "状态码（100 表示成功）",
          "example": 100
        },
        "success": {
          "type": "boolean",
          "description": "是否成功",
          "example": true
        }
      }
    },
    "QuoteResponse": {
      "allOf": [
        {
          "$ref": "#/definitions/ApiResponse"
        },
        {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Quote"
            }
          }
        }
      ]
    },
    "QuoteListResponse": {
      "allOf": [
        {
          "$ref": "#/definitions/ApiResponse"
        },
        {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Quote"
              }
            }
          }
        }
      ]
    },
    "QuotePaginatedResponse": {
      "allOf": [
        {
          "$ref": "#/definitions/ApiResponse"
        },
        {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "quotes": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Quote"
                  }
                },
                "total": {
                  "type": "integer",
                  "description": "总数",
                  "example": 100
                }
              }
            }
          }
        }
      ]
    }
  }
}
